            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:drawableLeft="@drawable/icon_platform"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:text="平台"
                android:textColor="@color/color_hint_color"
                android:textSize="@dimen/sp_13" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/person_data_dev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                app:bar_leftDrawable="@drawable/icon_enter_develoer"
                app:bar_leftText="入驻资料"
                app:bar_leftTextSize="@dimen/sp_13"
                app:bar_lineVisible="false"
                app:bar_rightDrawable="@drawable/icon_arrow_right"
                app:bar_rightDrawableSize="@dimen/dp_16"
                app:bar_rightText="待完善"
                app:bar_rightTextColor="@color/color_hint_color"
                app:bar_rightTextSize="@dimen/sp_13" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/person_data_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                app:bar_leftDrawable="@drawable/icon_service_deal"
                app:bar_leftText="服务协议"
                app:bar_leftTextSize="@dimen/sp_13"
                app:bar_lineVisible="false"
                app:bar_rightDrawable="@drawable/icon_arrow_right"
