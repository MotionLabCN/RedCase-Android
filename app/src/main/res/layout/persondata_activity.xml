                app:bar_leftTextSize="@dimen/sp_13"
                app:bar_lineVisible="false"
                app:bar_rightDrawable="@drawable/icon_arrow_right"
                app:bar_rightDrawableSize="@dimen/dp_16" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/person_data_evaluation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                app:bar_leftDrawable="@drawable/icon_evaluation_of_geeks"
                app:bar_leftText="极客测评"
                app:bar_leftTextSize="@dimen/sp_13"
                app:bar_lineVisible="false"
                app:bar_rightDrawable="@drawable/icon_arrow_right"
                app:bar_rightDrawableSize="@dimen/dp_16" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/common_line_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_24"
                android:drawableLeft="@drawable/icon_funds"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:text="资金"
                android:textColor="@color/color_hint_color" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/person_data_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                app:bar_leftDrawable="@drawable/icon_income"
                app:bar_leftText="收益账单"
                app:bar_leftTextSize="@dimen/sp_13"
                app:bar_lineVisible="false"
                app:bar_rightDrawable="@drawable/icon_arrow_right"
                app:bar_rightDrawableSize="@dimen/dp_16" />

