                app:bar_leftDrawable="@drawable/icon_private"
                app:bar_leftText="隐私政策"
                app:bar_leftTextSize="@dimen/sp_13"
                app:bar_lineVisible="false"
                app:bar_rightDrawable="@drawable/icon_arrow_right"
                app:bar_rightDrawableSize="@dimen/dp_16" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/person_data_deal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                app:bar_leftDrawable="@drawable/icon_deal"
                app:bar_leftText="用户协议"
                app:bar_leftTextSize="@dimen/sp_13"
                app:bar_lineVisible="false"
                app:bar_rightDrawable="@drawable/icon_arrow_right"
                app:bar_rightDrawableSize="@dimen/dp_16" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/person_data_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                app:bar_leftDrawable="@drawable/icon_account"
                app:bar_leftText="账户设置"
                app:bar_leftTextSize="@dimen/sp_13"
                app:bar_lineVisible="false"
                app:bar_rightDrawable="@drawable/icon_arrow_right"
                app:bar_rightDrawableSize="@dimen/dp_16" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/person_data_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                app:bar_leftDrawable="@drawable/icon_about"
                app:bar_leftText="关于天天数链开发者"
                app:bar_leftTextSize="@dimen/sp_13"
                app:bar_lineVisible="false"
                app:bar_rightDrawable="@drawable/icon_arrow_right"
                app:bar_rightDrawableSize="@dimen/dp_16" />

        </LinearLayout>
    </ScrollView>

    <com.hjq.bar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/transparent"
        app:leftIcon="@drawable/icon_back_black"
        app:lineVisible="false"
        app:title="" />
</FrameLayout>


