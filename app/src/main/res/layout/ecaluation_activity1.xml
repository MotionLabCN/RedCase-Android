<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:layoutAnimation="@null">


    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:rightBackground="@null"
        app:rightTitle=""
        app:leftIcon="@drawable/icon_back_black"
        app:lineVisible="false"
        app:rightTitleColor="@color/common_accent_color"
        app:rightTitleSize="@dimen/sp_14"
        app:title="参与测评" />
    <LinearLayout
        android:layout_width="@dimen/dp_343"
        android:layout_height="@dimen/dp_100"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_grey_radius_8"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:textSize="@dimen/sp_12"
            android:text="@string/setting_public_notice"
            android:textColor="#7E89A3"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_128"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_113"
        android:src="@drawable/bg_check_status"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="信息未完善"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/color_202839"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请先完善个人信息"
        android:textSize="@dimen/sp_13"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/color_7E89A3"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_out_improve_data"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginVertical="@dimen/dp_30"
        android:textColor="@color/common_primary_color"
        android:text="去完善资料" />

</LinearLayout>


