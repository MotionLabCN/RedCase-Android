<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:leftIcon="@drawable/icon_back_black"
        app:lineVisible="false"
        app:rightBackground="@null"
        app:rightTitleColor="@color/common_accent_color"
        app:rightTitleSize="@dimen/sp_14"
        app:title="验证码"
        app:titleStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="已发送企业管理员"
                android:textColor="@color/color_text_color"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_iphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:text="138*****1234"
                android:textColor="@color/color_hint_color"
                android:textSize="@dimen/sp_14" />

            <com.tntlinking.tntdev.widget.PasswordInputView
                android:id="@+id/pwd_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@null"
                android:inputType="number"
                android:padding="2dp"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                app:pwv_borderColor="@color/color_hint_color"
                app:pwv_borderStyle="line"
                app:pwv_haveInputBorderColor="@color/color_hint_color"
                app:pwv_pwdColor="@color/black"
                app:pwv_pwdStyle="plaintext"
                app:pwv_spacing="@dimen/dp_16"
                app:pwv_strokeWidth="@dimen/dp_1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_error"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="验证码错误"
                    android:textColor="@color/color_F5313D"
                    android:textSize="@dimen/sp_13"
                    android:visibility="invisible" />

                <com.hjq.widget.view.CountdownView
                    android:id="@+id/cv_countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="发送验证码"
                    android:textColor="@color/common_accent_color" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>