<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:layoutAnimation="@anim/layout_from_bottom"
    android:orientation="vertical"
    tools:layoutAnimation="@null">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:leftIcon="@drawable/icon_back_black"
        app:lineVisible="false"
        app:rightBackground="@null"
        app:title="" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingStart="@dimen/dp_12"
        android:text="编辑基本信息"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_24"
        android:textStyle="bold" />


    <com.hjq.widget.view.ClearEditText
        android:id="@+id/et_name"
        style="@style/EditTextStyleNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:hint="姓名"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:singleLine="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="#FFECECEC"/>
    <com.hjq.widget.layout.SettingBar
        android:id="@+id/info_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        app:bar_leftText="性别"
        app:bar_rightDrawableSize="@dimen/dp_16"
        app:bar_rightDrawable="@drawable/icon_arrow_right" />

    <com.hjq.widget.layout.SettingBar
        android:id="@+id/info_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        app:bar_leftText="出生日期"
        app:bar_rightDrawableSize="@dimen/dp_16"
        app:bar_rightDrawable="@drawable/icon_arrow_right" />

    <com.hjq.widget.layout.SettingBar
        android:id="@+id/info_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        app:bar_leftText="所在地"
        app:bar_rightDrawableSize="@dimen/dp_16"
        app:bar_rightDrawable="@drawable/icon_arrow_right" />

    <com.hjq.widget.layout.SettingBar
        android:id="@+id/info_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        app:bar_leftText="远程办公原因"
        app:bar_rightDrawableSize="@dimen/dp_16"
        app:bar_rightDrawable="@drawable/icon_arrow_right" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_info_next"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginVertical="@dimen/dp_20"
        android:text="保存" />
</LinearLayout>