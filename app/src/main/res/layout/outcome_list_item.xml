<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/black5"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@drawable/icon_tab"/>
        <TextView
            android:id="@+id/text_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评测技能:Android"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dp_320">

        <TextView
            android:id="@+id/text_time_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_24"
            android:drawableLeft="@drawable/icon_time3"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:text="时间"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_time_name"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_4"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:text="答题时间:120秒"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/evaluation_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_time"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:text="测评结束时间:2022-04-25T15:00:10"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/number_of_topics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/evaluation_end_time"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_24"
            android:drawableLeft="@drawable/icon_sp"
            android:drawablePadding="@dimen/dp_4"

            android:gravity="center"
            android:text="题目数量"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <TextView
            android:id="@+id/number_of_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/number_of_topics"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_4"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:text="总数:20  答对: 3  得分: 66"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/evaluation_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/number_of_name"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_24"
            android:drawableLeft="@drawable/cpjg"
            android:drawablePadding="@dimen/dp_4"

            android:gravity="center"
            android:text="评价等级"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <LinearLayout
            android:id="@+id/labeled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/evaluation_level"
            android:layout_marginTop="@dimen/dp_14"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_weight="1"
                android:text="自评等级"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_15" />

            <me.zhouzhuo.zzhorizontalprogressbar.ZzHorizontalProgressBar
               android:id="@+id/pd"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_weight="1"
                app:zpb_bg_color="@color/black5"
                app:zpb_max="100"
                app:zpb_padding="0dp"
                app:zpb_pb_color="@color/common_accent_color"
                app:zpb_progress="20" />

            <TextView
                android:id="@+id/text_self_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="了解"
                android:textColor="@color/gold"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labeled"
            android:layout_marginTop="@dimen/dp_14"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_weight="1"
                android:text="评测等级"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_15" />

            <me.zhouzhuo.zzhorizontalprogressbar.ZzHorizontalProgressBar
               android:id="@+id/pd1"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_weight="1"
                app:zpb_bg_color="@color/black5"
                app:zpb_max="100"
                app:zpb_padding="0dp"
                app:zpb_pb_color="@color/common_accent_color"
                app:zpb_progress="0" />

            <TextView
                android:id="@+id/text_evaluation_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="了解"
                android:textColor="@color/gold"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>