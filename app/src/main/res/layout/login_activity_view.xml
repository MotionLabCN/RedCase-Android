<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:layoutAnimation="@anim/layout_from_bottom"
    android:orientation="vertical"
    tools:context="com.tntlinking.tntdev.ui.activity.LoginActivity"
    tools:layoutAnimation="@null">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:barStyle="transparent"
        app:leftIcon="@null"
        app:rightBackground="@null"
        app:rightTitleColor="@color/common_accent_color"
        app:rightTitleSize="@dimen/sp_14"
        app:title="" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_180"
        app:srcCompat="@drawable/bg_view_1" />

    <LinearLayout
        android:id="@+id/ll_login_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:paddingStart="@dimen/dp_20">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你好，新朋友\n欢迎成为自由开发者"
            android:textSize="@dimen/sp_32"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:text="希望你可以在地球的任何地方，"
            android:textColor="#444E64"
            android:textSize="@dimen/sp_13" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="自由自在地生活和工作听从你心，"
            android:textColor="#444E64"
            android:textSize="@dimen/sp_13" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="无问西东！"
            android:textColor="#444E64"
            android:textSize="@dimen/sp_13" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="为了保证开发者的服务质量符合平台要求，我们将通过入驻环节来审核筛选出满足我们要求的开发者"
            android:textColor="#C1C6D2"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_login_view_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_20"
        android:layout_marginTop="32dp"
        android:visibility="gone">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成为自由开发者\n需要你满足以下条件"
            android:textSize="@dimen/sp_32"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:drawableStart="@drawable/icon_vector"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:text="1年以上开发经验"
            android:textColor="#444E64"
            android:textSize="@dimen/sp_13" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:drawableStart="@drawable/icon_vector"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:text="拥有支持开发的电脑、网速和环境"
            android:textColor="#444E64"
            android:textSize="@dimen/sp_13" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:drawableStart="@drawable/icon_vector"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:text="每个工作日可以提供4小时以上服务时间"
            android:textColor="#444E64"
            android:textSize="@dimen/sp_13" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:drawableStart="@drawable/icon_vector"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:text="以专业的态度交付专业的工作"
            android:textColor="#444E64"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login_view_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_20"
        android:layout_marginTop="32dp"
        android:visibility="gone">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你只需要完成以下3步\n开启自由工作之旅！"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:drawableStart="@drawable/icon_vector"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:text="填写入驻资料"
            android:textColor="#444E64"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:drawableStart="@drawable/icon_vector"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:text="参加入驻审核"
            android:textColor="#444E64"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:drawableStart="@drawable/icon_vector"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:text="等待审核结果"
            android:textColor="#444E64"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_commit_1"
        style="@style/ButtonStyle"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_30"
        android:text="下一步" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_commit_2"
        style="@style/ButtonStyle"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_30"
        android:text="下一步"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_commit_3"
        style="@style/ButtonStyle"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_30"
        android:text="立即开始"
        android:visibility="gone" />

</LinearLayout>