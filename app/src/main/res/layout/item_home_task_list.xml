<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:shape="rectangle"
    app:shape_radius="@dimen/dp_10"
    app:shape_shadowColor="@color/black25"
    app:shape_shadowSize="20dp"
    app:shape_solidColor="@color/white90">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_grey_stroke"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_task_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="完善入驻信息"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_task_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="完善入驻信息并审核通过领取奖励"
                    android:textColor="@color/color_hint_color"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_do_task"
                android:layout_width="@dimen/dp_68"
                android:layout_height="@dimen/dp_33"
                android:layout_gravity="center"
                android:background="@drawable/btn_red_radius_20"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_13"
                android:paddingTop="@dimen/dp_6"
                android:paddingRight="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_6"
                android:singleLine="true"
                android:text="做任务"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_red_gradient_radius_6"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_1"
            android:paddingTop="@dimen/dp_8"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_8">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_red_packet" />

                <TextView
                    android:id="@+id/tv_rewardNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text="100元"
                    android:textColor="@color/color_F5313D"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:id="@+id/view_dot"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_5"
                android:layout_gravity="center"
                android:background="@drawable/dot_oval_gray" />

            <TextView
                android:id="@+id/tv_remain_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_4"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="距失效剩余11天"
                android:textColor="@color/color_hint_color"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </LinearLayout>
</com.hjq.shape.layout.ShapeFrameLayout>