<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dp_40"
    android:layout_marginRight="@dimen/dp_40"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_15"
    app:cardElevation="0px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_25"
        android:paddingVertical="@dimen/dp_15">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/color_202839"
            android:text="确定切换不接单?"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/color_444E64"
            android:text="切换为不接单状态后,将不再展示职位推荐"
            android:textSize="@dimen/sp_13"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_15"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_dialog_custom_cancel"
                style="@style/ButtonStyleNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"
                android:minWidth="@dimen/dp_100"
                android:minHeight="@dimen/dp_30"
                android:text="取消" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_dialog_custom_ok"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="@dimen/dp_100"
                android:minHeight="@dimen/dp_30"
                android:text="确认" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>