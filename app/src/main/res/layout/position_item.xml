<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:shape="rectangle"
    app:shape_radius="@dimen/dp_10"
    app:shape_shadowColor="@color/black25"
    app:shape_shadowSize="20dp"
    app:shape_solidColor="@color/white90">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_grey_stroke"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_173">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_position_name"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"

            android:layout_height="wrap_content"
            android:text="测试工程师"/>
        <TextView
            android:id="@+id/tv_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:background="@drawable/bg_blue_stroke"
            android:paddingLeft="@dimen/dp_4"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_2"
            android:text="已自荐"
            android:textColor="@color/main_color"
            android:textSize="@dimen/sp_10" />
        <TextView
            android:id="@+id/tv_salary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10-11k·月"
            android:layout_weight="1"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:gravity="right"
            android:textColor="@color/main_color"
            android:textStyle="bold"

             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_work_pattern"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:background="@drawable/button_circle_selector_white"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_21"
            android:text="全日"/>
        <TextView
            android:id="@+id/tv_academic_degree"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/button_circle_selector_white"
            android:gravity="center"
            android:layout_height="@dimen/dp_21"
            android:text="大专"/>
        <TextView
            android:id="@+id/tv_work_experience"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_weight="1"
            android:background="@drawable/button_circle_selector_white"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_10"

            android:layout_height="@dimen/dp_21"
            android:text="3年经验"/>
        <TextView
            android:id="@+id/tv_job_skills_name"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_weight="1"
            android:background="@drawable/button_circle_selector_white"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="@dimen/dp_21"
            android:text=""/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_content"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_13"
        android:layout_height="wrap_content"
        android:textColor="@color/color_7E89A3"
        android:text="1.负责产品的核心功能和模块的代码编写...."/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center"
            android:background="@drawable/avatar_oval_black"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_16"
            android:singleLine="true"
            android:text="测试"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />


                <TextView
                    android:id="@+id/tv_professional_title"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_13"
                    android:gravity="center"
                    android:textColor="@color/color_444E64"
                    android:layout_height="wrap_content"
                    android:text="柏鑫·技术总监"/>

        <ImageView
            android:id="@+id/iv_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_4"
            android:src="@drawable/icon_run_recommend" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_company"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_7E89A3"
            android:layout_height="wrap_content"
            android:text="黄焖鸡科技有限公司"/>

    </LinearLayout>
</LinearLayout>
</com.hjq.shape.layout.ShapeFrameLayout>